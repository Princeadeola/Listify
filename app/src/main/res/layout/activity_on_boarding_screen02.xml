<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.OnBoardingScreen02">

    <TextView
        android:id="@+id/skipOnBoarding02ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20sp"
        android:fontFamily="@font/lora_semibold"
        android:text="@string/skip_text"
        android:textColor="#C26682"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/boarding02txtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onBoarding02txt01"
            android:textColor="#C26682"
            android:textSize="45sp"
            android:fontFamily="@font/notoseriftamil_semicondensed_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/boarding02txt2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onBoarding02txt02"
            android:textColor="#C26682"
            android:textSize="20sp"
            android:fontFamily="@font/notoseriftamil_regular"
            android:textStyle="normal"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/boarding02txtID"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/onBoarding02Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/boarding02txt2ID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/next_text"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"
            android:textSize="15sp"
            android:fontFamily="@font/lora_semibold"
            android:layout_marginTop="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>